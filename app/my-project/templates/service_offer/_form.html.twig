<div class="p-3">
    {{ form_start(form) }}
        {{ form_widget(form) }}
        <div>Стоимость: <span id="service_offer_cost">----</span></div>
        <br/>
        <button type="submit" id="service_offer_submit" class="btn btn-primary">{{ button_label|default('Сохранить') }}</button>
    {{ form_end(form) }}
</div>
<script>
    const cost = document.querySelector('#service_offer_cost')
    const rateService = document.querySelector('#service_offer_rateService')
    const initialCost = rateService.querySelector('option:checked').dataset.cost;

    rateService.onchange = (evy) => {
        cost.textContent = evy.target.options[evy.target.selectedIndex].dataset.cost ? 
            evy.target.options[evy.target.selectedIndex].dataset.cost + 'руб.' :
            '---'
    }
</script>
